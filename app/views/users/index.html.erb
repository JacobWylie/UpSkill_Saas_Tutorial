<div class="container index-page well-font">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class='text-center'>DevMatch Community</h1>
      <p class='text-center'>Welcome to the DevMatch community. Users must fill out a profile in order to be visable in the community</p>
      <ul class="list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile %>
          <li>
            <div class="well row <%= cycle('green-bg', 'blue-bg') %>">
              <div class="col-sm-4 text center">
                <% if user.profile.avatar %>
                  <%= link_to user do %>
                    <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                  <% end %>
                <% end %>
              </div>
              <div>
                <%= link_to user do %>
                  <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                <% end %>
                <p>
                  <% if user.plan_id == 2 %>
                    <span class="label label-danger">PRO</span>
                  <% end %>                  
                  <%= user.profile.job_title %>
                </p>
              </div>
            </div>
          </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>