<div class= "background">
  <div class="container sign-up">
    <div class="row">
      <div class = "col-md-8 col-md-offset-2 text-center well-font">
        <% if params[:plan] == '2' %>
          <h2 class = sign-up-head>Pro Acccount</h2>
          <p class = "sign-up-info">Register for the pro account for only $10/month and get unlimited access to all of DevMatch's social networking features</p>
        <% else %>
          <h2 class = "sign-up-head">Basic Account</h2>
          <p class = "sign-up-info">Register for free and receive basic access to DevMatch</p>
        <% end %>
      </div>
        
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          
          <% if params[:plan] =='2' %>
            <%= render "pro_form" %>
          <% else %>
            <%= render "basic_form" %>
          <% end %>
  
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
