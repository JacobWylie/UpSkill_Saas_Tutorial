<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
  <h2 class= "text-center well-font">Sign Up</h2>

  <div class="field form-group">
    <%= f.label :email, class: 'well-font' %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "name@example.com" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: 'well-font' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: 'well-font' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022" %>
  </div>
  
  <div class= "field form-group">
    <%= label_tag :card_number, "Credit Card Number", class: 'well-font' %>
    <%= text_field_tag :card_number, nil, name: nil, class: "form-control", placeholder: "xxxx-xxxx-xxxx-xxxx" %>
  </div>
  
  <div class= "field form-group">
    <%= label_tag :card_code, "Security Code on Card (CVV)", class: 'well-font' %>
    <%= text_field_tag :card_code, nil, name: nil, class: "form-control", placeholder: "xxx" %>
  </div>
  
  <div class= "field form-group">
    <%= label_tag :card_month, "Card Expiration", class: 'well-font' %>
  </div>
  <div class= "field form-group">
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}%>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, {name: nil, id: "card_year"}%>
  </div>
  
  </br>
  <div class="actions form-group">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
<% end %> 