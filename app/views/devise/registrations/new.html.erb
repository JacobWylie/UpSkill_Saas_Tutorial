<div class="container sign-up">
 <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well
      
        <% if params[:plan] =='2' %>
          <h2 class= "text-center well-font">Pro Account Registration</h2>
        <% else %>
          <h2 class= "text-center well-font">Basic Account Registration</h2>
        <% end %>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
        
          <div class="field form-group">
            <%= f.label :email, class: 'well-font' %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
        
          <div class="field form-group">
            <%= f.label :password, class: 'well-font' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
        
          <div class="field form-group">
            <%= f.label :password_confirmation, class: 'well-font' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        
          <div class="actions form-group">
            <%= f.submit "Sign up", class: 'btn btn-success' %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
